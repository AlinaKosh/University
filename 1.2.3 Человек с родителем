//ДРУГОЙ КЛАСС
public class Human {
    public String name;
    public String surname;
    public String secondName;

    @Override
    public String toString() {
        String res = "";
        if (name!=null)  res += (name + " ");
        if (surname!=null) res += (surname + " ");
        if (secondName!=null) res += (secondName + " ");
        return res;
    }

}

public class People {
    public String name;
    public int height;
    public String secondName;

    public People(Human name, int height) {
        this.name = String.valueOf(name);
        this.height = height;
    }

    public People(Human name, String secondName) {
        this.name = String.valueOf(name);
        this.secondName = secondName;
    }

    public String addDad(){
        if (secondName==null) return name;
        return name + secondName + "ович";
    }

    @Override
    public String toString() {
        return name + ", рост: " + height;
    }
}


public class Main1 {

    public static void main(String[] args) {
        
        Human human1 = new Human();
        Human human2 = new Human();
        Human human3 = new Human();

        human1.name = "Иван";
        human1.surname = "Чудов";

        human2.name = "Петр";
        human2.surname = "Чудов";

        human3.name = "Борис";
        human3.surname = "Чудов";

        People people1 = new People(human1,null);
        People people2 = new People(human2,human1.name);
        People people3 = new People(human3,human2.name);


        System.out.println(people1.addDad());
        System.out.println(people2.addDad());
        System.out.println(people3.addDad());
    }
}

