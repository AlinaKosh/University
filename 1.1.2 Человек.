public class People {
    private String name;
    private int height;

    public People(String name, int height) {
        this.name = name;
        this.height = height;
    }

    @Override
    public String toString() {
        return name + ", рост: " + height;
    }
}


import java.util.Scanner;

public class Main1 {

    public static void main(String[] args) {

        People people1 = new People("Клеопатра",152);
        People people2 = new People("Пушкин",167);
        People people3 = new People("Владимир", 189);
        System.out.println(people1);
        System.out.println(people2);
        System.out.println(people3);
    }
}
