public interface BirdSing {
    void sing();
}


public class SpecialClassForBird{
    public static void manySing(String name) throws Exception {
        BirdSing birdSing = (BirdSing) Class.forName(name).newInstance();
        birdSing.sing();
    }
}



public class Main {

    public static void main(String[] args) throws Exception {
        
        SpecialClassForBird.manySing("Sparrow");
        SpecialClassForBird.manySing("Cuckoo");
        SpecialClassForBird.manySing("Parrot");

    }
}
