import java.util.Scanner;

public class Main1 {

    public static void main(String[] args) {
    
        Employee employee1 = new Employee("Петров", "IT", "Козлов");
        Employee employee2 = new Employee("Козлов","IT","Козлов");
        Employee employee3 = new Employee("Сидоров","IT", "Козлов");

        System.out.println(employee1);
        System.out.println(employee2);
        System.out.println(employee3);
    }
}


//ДРУГОЙ КЛАСС
public class Employee {
    private String name;
    private String department;
    private String warden;

    public Employee(String name, String department, String warden) {
        this.name = name;
        this.department = department;
        this.warden = warden;
    }
    @Override
    public String toString() {
        if (name.equals(warden)) return warden + " начальник отдела " + department;
        return name + " работает в отделе " + department + " начальник которого " + warden;
    }
}
