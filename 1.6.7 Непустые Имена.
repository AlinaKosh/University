public class Names {
    public String name;
    public String secondName;
    public String surname;

    public Names(String name) {
        if ((name == null) || (name.equals(""))) throw new IllegalArgumentException("Не задано имя");
        this.name = name;
    }

    public Names(String name, String surname) {
        this(name);
        if (surname == null || surname.equals("")) throw new IllegalArgumentException("Не заданы имя и фамилия");
        this.surname = surname;
    }

    public Names(String name, String surname, String secondName) {
        this(name, surname);
        if ((secondName==null) || (secondName.equals("")))
            throw new IllegalArgumentException("Не задано отчество");
        this.secondName = secondName;
    }

    public String getName() {
        return name;
    }

    public String getSecondName() {
        return secondName;
    }

    public String getSurname() {
        return surname;
    }

    @Override
    public String toString() {
        String res = "";
        if (name != null) res += (name + " ");
        if (surname != null) res += (surname + " ");
        if (secondName != null) res += (secondName + " ");
        return res;
    }
}



public class Main1 {

    public static void main(String[] args) {
        
        Names names1 = new Names("Вова",null);
        System.out.println(names1);
        Names names2 = new Names(null,null,"Пупкин");
        System.out.println(names2);
        Names names3 = new Names(null,null);
        System.out.println(names3);
    }
}
