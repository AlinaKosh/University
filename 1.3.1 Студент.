import java.util.Arrays;

public class Employee {

    private String name1;
    private String name2;
    private String name3;
    private int[] marks;

    public static void main(String[] args) {
        Employee employee =  new Employee();

        employee.marks = new int[]{3, 4, 5};
        employee.name1 = "Вася";
        System.out.println("Имя: " + employee.name1 + ", Оценки" + Arrays.toString(employee.marks));

        employee.name2 = "Петя";
        int[] marks1 = employee.marks;
        marks1[0] = 5;
        System.out.println("Имя: " + employee.name2 + ", Оценки" + Arrays.toString(marks1));

        //я не знаю, как взять первоначальные оценки Пети, которые были не изменены
        employee.name3 = "Андрей";
        int[] marks2 = marks1;
        System.out.println("Имя: " + employee.name3 + ", Оценки" + Arrays.toString(marks2));
    }
}
